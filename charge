import time

def start_charging():
    # Код для включения зарядки
    print("Зарядка началась")
    # Включение питания или контроллера зарядки
    
def stop_charging():
    # Код для выключения зарядки
    print("Зарядка завершена")
    # Выключение питания или контроллера зарядки

def main():
    # Основная логика программы
    # Пример использования: зарядка робота на 1 минуту
    start_charging() # Включение зарядки
    time.sleep(60) # Задержка в секундах
    stop_charging() # Выключение зарядки

if __name__ == '__main__':
    main()
